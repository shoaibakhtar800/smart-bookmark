generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

model User {
  id        String     @id
  email     String?    @unique
  bookmarks Bookmark[]
  createdAt DateTime   @default(now())
}

model Bookmark {
  id        String   @id @default(uuid())
  title     String
  url       String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
